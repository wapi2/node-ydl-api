{
  "name": "node-ydl-api",
  "version": "1.0.0",
  "description": "API for YouTube downloads using serverless functions on Netlify",
  "main": "functions/server.js",
  "type": "module",
  "scripts": {
    "dev": "netlify dev",
    "prebuild": "curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o ./functions/yt-dlp && chmod +x ./functions/yt-dlp",
    "build": "netlify functions:build --src functions",
    "deploy": "netlify deploy --prod"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "yt-dlp-wrap": "^2.3.11",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "netlify-cli": "^18.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}